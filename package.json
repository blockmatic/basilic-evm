{
  "name": "basilica",
  "version": "1.0.0",
  "description": "basilica monorepo",
  "author": "bitcash.org",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "turbo build --no-daemon",
    "dev": "turbo dev --no-daemon --parallel",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "workspaces": {
    "packages": ["apps/*", "packages/*", "hardhat", "hardhat/**"],
    "nohoist": [
      "**/vite",
      "**/vite/**",
      "**/cbw-sdk",
      "**/cbw-sdk/**",
      "**/wagmi",
      "**/wagmi/**"
    ]
  },
  "packageManager": "bun@1.1.24",
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bn.js": "^5.1.5",
    "@types/node": "latest",
    "turbo": "^2.0.13"
  }
}
